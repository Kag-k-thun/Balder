 * ==================================          MENU BUTTONS          ==================================
 * ====================================================================================================
 * ====================================================================================================
 */


LinearLayout .menuBar {
    height: 30;
    width: 300;
}

MenuButton .bidule {
    height: 30;
    width: 70;
    background-color: grey!90;
}

MenuButton :hover .bidule {
    background-color: grey!60;
}

MenuButton :check .bidule {
    background-color: grey!0;
}

MenuButton ::label .bidule {
    width: 100;
    font-size: 20;
    text-color: black!0;
    font: "res:/fonts/noto/NotoSans-Regular.ttf";
}

LinearLayout .editLin {
    width: 90;
    height: 120;
}

LinearLayout .fileLin {
    width: 90;
    height: 30;
}

PushButton .editButton {
    height: 30;
    width: 90;
    //margin-left: 10;
}

PushButton :hover .editButton {
    background-color: grey!60;
}

PushButton :check .editButton {
    background-color: grey!0;
}

PushButton ::label .editButton {
    width: 100;
    font-size: 20;
    text-color: black!0;
    text-xalign: left;
    margin-left: 10;
    font: "res:/fonts/noto/NotoSans-Regular.ttf";
}


MenuButton .editButton {
    width: 70;
    height: 30;
    background-color: grey!90;
}


MenuButton :hover .editButton {
    background-color: grey!60;
}

MenuButton :check .editButton {
    background-color: grey!0;
}

MenuButton ::label .editButton {
    font-size: 20;
    text-color: black!0;
    text-xalign: left;
    text-yalign: center;
    margin-left: 10;
    font: "res:/fonts/noto/NotoSans-Regular.ttf";
}
