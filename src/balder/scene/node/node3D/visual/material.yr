in material;

use balder::core::_;
use balder::core::config::_;
use balder::core::shader::_;

use balder::math::_;

@abstract
pub class Material {

    pub let shaderConfig : &ShaderConfig;

    pub self (shaderConfig : &ShaderConfig)
        with shaderConfig = shaderConfig
    {}

    pub fn attach (mut self, dmut descSet : &DescriptorSet);

    impl Disposable;

}
