in compute;

use balder::core::config::shader::_;

/**
 * Configuration of a compute shader
 * */
pub class ComputeShaderConfig over ShaderConfig {

    // The size of the local groups in the shader
    pub let dmut groupSizes : [u32 ; 3] = [1 ; 3u32];

    // The shader to execute
    pub let mut pass : ShaderPass = ShaderPass ();
    
    pub self (name : [c8])
        with super (name)
    {}
    
}
